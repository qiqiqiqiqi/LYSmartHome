                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_curtain"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp_0.5"
                    android:layout_weight="1"
                    android:background="@drawable/home_bg"
                    >

                    <TextView
