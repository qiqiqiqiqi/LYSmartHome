<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <View
        android:id="@+id/bg_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:background="@mipmap/bg_slide"
        ></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bg_view"
        android:background="@color/color_f8f8f8"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_60"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                >

                <RelativeLayout
                    android:id="@+id/rl_return"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_48"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/selector_small_btn_bg"
                    >

                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/btn_return"
                        />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_return"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/btn_return"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_11"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                >

                <RelativeLayout
                    android:id="@+id/rl_off"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_48"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/selector_small_btn_bg"
                    >

                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/voice_off"
                        />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_off"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/voice_off"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_11"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                >

                <RelativeLayout
                    android:id="@+id/rl_toggle_on"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_48"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/selector_small_btn_bg"
                    >

                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/toggle_on"
                        />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_toggle_on"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/toggle_on"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_11"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                >

                <RelativeLayout
                    android:id="@+id/rl_set_up"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_48"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/selector_small_btn_bg"
                    >

                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/setting"
                        />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_set_up"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/set_up"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_11"
                    />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal"
            >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

                <RelativeLayout
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_144"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/vol_bg"
                    >

                    <ImageView
                        android:id="@+id/iv_vol_add"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:gravity="bottom|center_horizontal"
                        android:paddingBottom="@dimen/dp_25"
                        android:paddingTop="@dimen/dp_25"
                        android:src="@drawable/selector_add"
                        />

                    <TextView
                        android:id="@+id/tv_vol_des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/tv_vol"
                        />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="bottom|center_horizontal"
                        android:paddingBottom="@dimen/dp_25"
                        android:paddingTop="@dimen/dp_25"
                        android:src="@drawable/selector_down"
                        />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                >

                <RelativeLayout
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="@dimen/dp_150"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/btn_ok_normal"
                    >

                    <RelativeLayout
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/btn_ok_bg"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="OK"
                            android:textColor="@color/common_text_color"
                            />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerInside"
                        android:src="@mipmap/btn_up"
                        />

                    <ImageView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerInside"
                        android:src="@mipmap/btn_down"
                        />

                    <ImageView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:src="@mipmap/btn_left"
                        />

                    <ImageView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:src="@mipmap/btn_right"
                        />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

                <RelativeLayout
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_144"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/vol_bg"
                    >

                    <ImageView
                        android:id="@+id/iv_ch_add"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:gravity="bottom|center_horizontal"
                        android:paddingBottom="@dimen/dp_25"
                        android:paddingTop="@dimen/dp_25"
                        android:src="@drawable/selector_add"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/tv_ch"
                        />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="bottom|center_horizontal"
                        android:paddingBottom="@dimen/dp_25"
                        android:paddingTop="@dimen/dp_25"
                        android:src="@drawable/selector_down"
                        />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/selector_num_bg"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/common_text_color"
                android:textSize="@dimen/sp_15"
                />

            <TextView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/selector_num_bg"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/common_text_color"
                android:textSize="@dimen/sp_15"
                />

            <TextView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/selector_num_bg"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/common_text_color"
                android:textSize="@dimen/sp_15"
                />

            <TextView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/selector_num_bg"
                android:textColor="@color/common_text_color"
                android:gravity="center"
                android:text="4"
                android:textSize="@dimen/sp_15"
                />

            <TextView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:background="@drawable/selector_num_bg"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/common_text_color"
                android:textSize="@dimen/sp_15"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/selector_num_bg"
                android:textColor="@color/common_text_color"
                android:gravity="center"
                android:text="6"
                android:textSize="@dimen/sp_15"
                />

            <TextView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/selector_num_bg"
                android:textColor="@color/common_text_color"
                android:gravity="center"
                android:text="7"
                android:textSize="@dimen/sp_15"
                />

            <TextView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/selector_num_bg"
                android:textColor="@color/common_text_color"
                android:gravity="center"
                android:text="8"
                android:textSize="@dimen/sp_15"
                />

            <TextView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/selector_num_bg"
                android:textColor="@color/common_text_color"
                android:gravity="center"
                android:text="9"
                android:textSize="@dimen/sp_15"
                />

            <TextView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:background="@drawable/selector_num_bg"
                android:textColor="@color/common_text_color"
                android:gravity="center"
                android:text="0"
                android:textSize="@dimen/sp_15"
                />
        </LinearLayout>

    </LinearLayout>

    <com.jb.jb_library.banner.BannerView
        android:id="@+id/banner_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        app:canLoop="true"
        app:indicatorAlign="center"
        app:indicatorPaddingLeft="@dimen/dp_10"
        app:loopAutoPlay="false"
        app:middle_page_cover="false"
        app:open_mz_mode="true"
        >

    </com.jb.jb_library.banner.BannerView>

</RelativeLayout>